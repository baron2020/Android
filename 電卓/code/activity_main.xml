<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:id="@+id/sikiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 式 ："
            android:textSize="25sp"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/inputDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_display"
            android:textSize="25sp"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/resultDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow>
            <Button
                android:id="@+id/btClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bv_clear"
                android:textSize="25dp"
                android:background="#C0C0C0"/>
            <Button
                android:id="@+id/btRoot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#C0C0C0"
                android:text="@string/bv_root"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btPercent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#C0C0C0"
                android:text="@string/bv_percent"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btDivision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#009688"
                android:text="@string/bv_division"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_7"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_8"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_9"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btMultiplication"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_multiplication"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_4"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_5"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_6"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btMinus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_minus"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_1"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_2"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_3"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btPlus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_plus"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_0"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt00"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_00"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btPoint"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_point"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btEqual"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_equal"
                android:textSize="25dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
