<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/input"
        android:textSize="25dp"
        >
    </TextView>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textSize="25dp"
        >
    </TextView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow>
            <Button
                android:id="@+id/btClear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_clear"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btRoot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_root"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btPercent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_percent"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btDivision"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_division"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_7"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_8"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_9"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btMultiplication"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_multiplication"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_4"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_5"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_6"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btMinus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_minus"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_1"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_2"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_3"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btPlus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_plus"
                android:textSize="25dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_0"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/bt00"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_00"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btPoint"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_point"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btEqual"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bv_equal"
                android:textSize="25dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>