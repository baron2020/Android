<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36393f"
        android:padding="4dp"
        >
        <!--コメント android:background="#42bddc"-->
        <ImageView
            android:id="@+id/imageMusic"
            android:background="@drawable/icon_music"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/description"/>

        <TextView
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="プレイリスト"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imageMusic"
            android:gravity="left|center"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listtest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40444b"
        >
    </LinearLayout>

</LinearLayout>