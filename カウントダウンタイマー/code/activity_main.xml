<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/whiteTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timer1"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/whiteStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startTimer"
            android:text="スタート" />
        <Button
            android:id="@+id/whiteStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ストップ"
            android:onClick="stopTimer"/>
    </LinearLayout>
    <TextView
        android:id="@+id/whiteRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="残り時間："
        android:textSize="30dp"
        android:layout_marginLeft="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
        <TextView
            android:id="@+id/blackTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timer2"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/blackStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startTimer"
            android:text="スタート" />
        <Button
            android:id="@+id/blackStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ストップ"
            android:onClick="stopTimer"/>
    </LinearLayout>
    <TextView
        android:id="@+id/blackRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="残り時間："
        android:textSize="30dp"
        android:layout_marginLeft="30dp"/>
</LinearLayout>